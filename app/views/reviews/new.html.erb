<h1>New Review for <%= @movie.title %></h1>
<%= form_with model: [@movie, @review], local: true do |form| %>
  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.label :score %>
    <%= form.number_field :score %>
  </div>

  <div>
    <%= form.submit "Post Review" %>
  </div>
<% end %>